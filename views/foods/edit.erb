<div class="foods-edit">
<h1>Editing <%= @food.name %></h1>

<form action="/foods/<%= @food.id %>" method='POST'>
  Item: <input type="text" name='food[name]' value="<%= @food.name %>"><br>
  Cuisine Type: <input type="text" name='food[cuisine_type]' value="<%= @food.cuisine_type %>"><br>
  Description: <input type="text" name='food[description]' value="<%= @food.description %>"><br>
  Price: <input type="text" name='food[price]' value="<%= @food.price %>"><br>
  Allergens: <input type="text" name='food[allergens]' value="<%= @food.allergens %>"><br>
  
  <input type="hidden" name="_method" value="PATCH">
  <input type="submit">
</form>

<form action="/foods/<%= @food.id %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Item">
</form>
</div>