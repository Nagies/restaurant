<div class="parties-receipt">
<h1>Receipt for Party: <%= @party.id %></h1>

<% @foods.uniq.each do |food| %>
	<p><%= food.name %> x
	<%= @party.foods.where(name: food.name).count %>,
	£<%= "%.2f" % food.price %></p>
	<% end %>

<div>
<p>      </p><br>
</div>

<h1>Subtotal £<%= "%.2f" % @foods.sum(:price)%></h1>
<h1><span>Sales Tax £<%= "%.2f" % (@foods.sum(:price) * 0.08875) %></span></h1>
<h1>Total £<%= "%.2f" % (@foods.sum(:price) + (@foods.sum(:price) * 0.08875)) %> </h1>

<div>
<p>      </p><br>
</div>

<h1>Suggested Tip</h1>
	<p> 15% = £<%= "%.2f" % (@foods.sum(:price) * 0.15) %></p>
	<p> 20% = £<%= "%.2f" % (@foods.sum(:price) * 0.20) %></p>
	<p> 25% = £<%= "%.2f" % (@foods.sum(:price) * 0.25) %></p>
</div>